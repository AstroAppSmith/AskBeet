<body>
    <div class="container">
        <h1>Beet, what number comes between 2 and 4</h1>
        <p>I think uhhh, I think uhhhhhhhh, I think it's</p>
        
        <div class="number-display" id="numberDisplay">--</div>
        
        <button id="generateBtn">Generate Number</button>
        
        <div class="footer">
            <p>Range: 0-59</p>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const generateBtn = document.getElementById('generateBtn');
            const numberDisplay = document.getElementById('numberDisplay');
            
            generateBtn.addEventListener('click', function() {
                // Generate random number between 0 and 59
                const randomNumber = Math.floor(Math.random() * 60);
                
                // Display with animation
                numberDisplay.textContent = "";
                numberDisplay.style.transform = "scale(0.8)";
                numberDisplay.style.opacity = "0.5";
                
                setTimeout(() => {
                    numberDisplay.textContent = randomNumber;
                    numberDisplay.style.transform = "scale(1)";
                    numberDisplay.style.opacity = "1";
                }, 200);
            });
        });
    </script>
